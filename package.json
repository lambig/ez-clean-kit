{
  "name": "ez-clean-kit",
  "version": "0.1.1",
  "description": "Easily implemented kit for starting up clean application",
  "main": "index.js",
  "scripts": {
    "watch": "tsc-watch",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:cjs": "tsc --project . --module commonjs --outDir ./dist-cjs",
    "build:esm": "tsc --project . --module es2015 --outDir ./dist-esm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lambig/ez-clean-kit.git"
  },
  "author": "lambig",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lambig/ez-clean-kit/issues"
  },
  "homepage": "https://github.com/lambig/ez-clean-kit#readme",
  "devDependencies": {
    "@types/jest": "27.0.3",
    "@types/node": "16.11.11",
    "jest": "27.4.3",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "toolbox-ts": "0.2.0",
    "ts-jest": "27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "10.4.0",
    "ts-node-dev": "1.1.8",
    "tsc-watch": "4.5.0",
    "typescript": "4.5.2",
    "webpack": "5.68.0",
    "webpack-cli": "4.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/test/example/"
    ]
  }
}
